{
    "extends": [
        "airbnb-typescript",
        "airbnb/hooks",
        "plugin:@typescript-eslint/recommended",
        "plugin:jest/recommended"
      ],
      "plugins": [
        "react",
        "@typescript-eslint",
        "jest"
      ],
      "env": {
        "browser": true,
        "es6": true,
        "jest": true
      },
      "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
      },
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaFeatures": {
          "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module",
        "project": "./tsconfig.json"
      },
      "rules": {
        "linebreak-style": "off",
        "indent": "off",
        "react/jsx-indent": [
          "warn",
          4
        ],
        "react/jsx-indent-props": [
          "warn",
          4
        ],
        "@typescript-eslint/indent": [
          "warn",
          4
        ],
        "react/jsx-first-prop-new-line": [
          1,
          "multiline"
        ],
        "react/jsx-max-props-per-line": [
          1,
          {
            "when": "multiline"
          }
        ],
        "react/jsx-props-no-spreading": [0],
        "no-empty": [
          "error", 
          {
            "allowEmptyCatch": true 
          }
        ],
        "no-param-reassign": [
          "error",
          {
            "props": false
          }
        ]
      }
}